<mapper namespace="com.rsh.easy_opm.UserMapper">
    <resultMap id="ResultUser">
        <result column="nick_name" property="nickName"/>
        <result column="real_name" property="realName"/>
    </resultMap>

    <select id="selectByPrimaryKey" parameterType="basic" resultType="com.rsh.easy_opm.User" resultMap="ResultUser">
        select
            id,
            nick_name,
            real_name,
            sex,
            age
        from user
        where id = #{id};
    </select>

    <select id="selectAll" resultType="com.rsh.easy_opm.User" resultMap="ResultUser">
        select
            id,
            nick_name,
            real_name,
            sex,
            age
        from user;
    </select>

    <insert id="insertOne" parameterType="com.rsh.easy_opm.User">
        insert into user
            values (#{id}, #{nickName}, #{realName}, #{sex}, #{age});
    </insert>

    <insert id="deleteByPrimaryKey" parameterType="basic">
        delete from user
        where id=#{id};
    </insert>

</mapper>